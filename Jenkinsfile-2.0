def gv

pipeline {
    agent any
    tools {
        maven 'maven-3.8.5'
    }
    stages {
        stage('init'){
            steps{
                script{
                    echo 'Initializng groovy script'
                    echo 'Testing gitlab & github intergration 2.0'
                    gv = load 'script-2.0.groovy'
                }
            }
        }
        stage("build jar") {
            steps {
                script {
                    gv.buildJar()
            }
            }

        }
        stage ("build image"){
            steps {
                script {
                    gv.buildImage()
             }
            }
        }

        stage ('deploy image'){
            steps{
                script{
                     gv.deployImage()
                }
            }
                
        }
    }
}
